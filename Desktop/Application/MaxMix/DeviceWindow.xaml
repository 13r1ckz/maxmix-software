<Window x:Class="MaxMix.DeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaxMix"
        mc:Ignorable="d"
        Title="DeviceWindow" Height="128" Width="256">

    <Canvas>
        <ContentPresenter x:Name="UISourceElement" Canvas.Top="0" Canvas.Left="0"
                          Width="128" Height="32" Content="{Binding DeviceViewModel}" />
        
        <Image x:Name="UITargetImage" Canvas.Top="32" Canvas.Left="0" Width="128" Height="32" />        
    </Canvas>
    
</Window>
